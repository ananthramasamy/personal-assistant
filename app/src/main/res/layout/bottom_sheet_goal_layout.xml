<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin_half">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="240dp"
        app:cardBackgroundColor="@color/md_white_1000"
        app:cardCornerRadius="6dp"
        app:cardElevation="3dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <TextView
                    android:id="@+id/warning_tittle_tv"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:background="#FFA500"
                    android:fontFamily="sans-serif-condensed"
                    android:gravity="center"
                    android:padding="5dp"
                    android:text="Set Your Goals"
                    android:textColor="@color/md_white_1000"
                    android:textSize="18sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/close_btn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_alignParentEnd="true"
                    android:background="@color/md_white_1000"
                    android:contentDescription="@null"
                    android:src="@drawable/ic_close" />

            </RelativeLayout>


            <android.support.design.widget.TextInputLayout
                android:id="@+id/goal_income_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/activity_margin_half"
                android:paddingStart="@dimen/activity_margin_half"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Small">

                <EditText
                    android:id="@+id/goal_income_et"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="@string/hint_goals_income_et"
                    android:inputType="number"
                    android:lineSpacingExtra="5dp"
                    android:singleLine="true"
                    android:textColor="@color/md_black_1000"
                    android:textSize="@dimen/value_txt_size"
                    android:textStyle="normal" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:id="@+id/goal_expense_wrapper"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingEnd="@dimen/activity_margin_half"
                android:paddingStart="@dimen/activity_margin_half"
                app:hintTextAppearance="@style/TextAppearance.AppCompat.Small">

                <EditText
                    android:id="@+id/goal_expense_et"
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:fontFamily="sans-serif-condensed"
                    android:hint="@string/hint_goals_expense_et"
                    android:inputType="number"
                    android:lineSpacingExtra="5dp"
                    android:singleLine="true"
                    android:textColor="@color/md_black_1000"
                    android:textSize="@dimen/value_txt_size"
                    android:textStyle="normal" />
            </android.support.design.widget.TextInputLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/md_grey_300" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginBottom="@dimen/activity_margin_half"
                android:layout_marginEnd="@dimen/activity_margin_half"
                android:layout_marginTop="@dimen/activity_margin_half"
                android:gravity="end"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/submit_goals_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:background="@drawable/ic_rounded_btn_background"
                    android:fontFamily="sans-serif-condensed"
                    android:paddingEnd="@dimen/activity_margin_half"
                    android:paddingStart="@dimen/activity_margin_half"
                    android:text="Submit"
                    android:textAllCaps="false"
                    android:textColor="@color/md_white_1000" />
            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>


</RelativeLayout>