<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scheme_detail_item_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:minHeight="70dp"
    android:padding="4dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toStartOf="@+id/actual_goals_edit_remove_layout_view"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="@dimen/activity_margin_half">

        <LinearLayout
            android:id="@+id/actual_income_layout_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".6"
            android:gravity="start"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/actual_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/str_actual_income"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/md_grey_600"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/actual_value_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="@string/_0_0"
                android:textColor="@color/md_black_1000"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/goals_layout_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.4"
            android:gravity="start"
            android:orientation="vertical"
            android:paddingBottom="8dp"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/goal_name_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:padding="2dp"
                android:text="@string/str_goals_income"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="@color/md_grey_600"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/goals_value_tv"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="2dp"
                android:text="@string/_0_0"
                android:textColor="@color/md_black_1000"
                android:textSize="16sp" />

        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/actual_goals_edit_remove_layout_view"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/month_name_tv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:padding="2dp"
            android:text="@string/str_goals_income"
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
            android:textColor="@color/md_grey_600"
            android:textSize="12sp" />


        <TextView
            android:id="@+id/year_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/activity_margin_half"
            android:contentDescription="@null"
            android:drawableEnd="@drawable/ic_date_range"
            android:drawablePadding="2dp"
            android:gravity="center"
            android:minWidth="60dp"
            android:padding="2dp"
            android:text="2018"
            android:textColor="@color/md_black_1000"
            android:textSize="16sp"
            android:textStyle="normal" />


    </LinearLayout>

</RelativeLayout>